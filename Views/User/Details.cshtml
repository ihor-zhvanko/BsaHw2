@model User
@{
    ViewData["Title"] = "Home Page";
}

<h2 class="my-5 text-center">User Details</h2>

<div class="row">
  <div class="d-flex flex-column">
    @await Html.PartialAsync("_UserCard",
      (@Model, "", "", "")
    )
  </div>
  <div class="col-lg">
    <div class="my-3">
        @await Html.PartialAsync("_UserPosts", @Model.Posts)
    </div>

    <div class="my-3">
        @await Html.PartialAsync("_UserToDos", @Model.ToDos)
    </div>
  </div>
</div>